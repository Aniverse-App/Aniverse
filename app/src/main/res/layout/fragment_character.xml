<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CharacterFragment">

    <RelativeLayout
        android:background="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/naruto"/>
        <ImageView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />


        <!--Below is the linear layout of my menu options-->
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/mainMenu"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <!--Blank Space-->
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                />


            <!--Blank Space-->
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                />
            <Button
                android:fontFamily="@font/zorque"

                android:textColor="#009688"
                android:background="@drawable/oval"
                android:id="@+id/guessMode"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="guess_me"/>







            <!--Blank Space-->
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"/>

        </LinearLayout>


        <Button
            android:fontFamily="@font/zorque"
            android:visibility="visible"
            android:textColor="#D8372B"
            android:background="@drawable/circle"
            android:id="@+id/quit"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quit"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>